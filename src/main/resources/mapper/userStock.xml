<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.LJ.StockSafe.model.mapper.UserStockMapper">
	
	<insert id="createUserStock" parameterType="UserStockDto">
		insert into userStock(userinfo_id, stock_id)
		VALUES( #{userinfoId}, #{stockId});
	</insert>
	
	
	<select id="readUserStock" parameterType="String" resultType="UserStockDto">
		select userinfo_id, stock_id
		from userStock
		where userinfo_id = #{userinfoId}
	</select>
	
	
	<delete id="deleteUserStock" parameterType="UserStockDto">
		delete from userStock
		where stock_id = #{stockId}
	</delete>
	
</mapper>
	