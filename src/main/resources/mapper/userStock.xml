<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.LJ.StockSafe.model.mapper.UserStockMapper">
	
	<insert id="createUserStock" parameterType="UserStockDto" useGeneratedKeys="true"
    keyProperty="id">
		insert into memberStock(member_id, stock_id)
		select #{memberId}, #{stockId} from dual
		where not exists(
			select member_id, stock_id from memberStock
			where member_id=#{memberId} and stock_id = #{stockId})
		
	</insert>
	
	<select id="readUserStock" parameterType="String" resultType="UserStockDto">
		select *
		from memberStock
		where member_id = #{memberId}
	</select>
	
	
	<delete id="deleteUserStock" parameterType="UserStockDto">
		delete from memberStock
		where stock_id = #{stockId}
	</delete>
	
</mapper>
	